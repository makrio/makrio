<% content_for :head do %>
    <meta property="og:title" content="<%= AppConfig[:pod_name] %>" />
    <meta property="og:description" content="Make it uniquely you" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="<%= AppConfig[:pod_url] %>" />
    <meta property="og:image" content="<%= AppConfig[:pod_url] %>/icon_128.gif" />
    <meta property="fb:app_id" content="223055781146202" />
<% end %>

<div id="landing">
  <div id="banner" class="row" role="header">
    <div class="fb-like" data-href="https://makr.io" data-send="false" data-width="450" data-show-faces="true" data-colorscheme="dark"></div>

    <div id="controls">
      <a href="https://twitter.com/makrapp">
        <span class="label label-inverse" title="Follow @makrapp on Twitter">
          <img src="https://d3mbmfe8268ud7.cloudfront.net/landing/home_twit@2x.png" class="twitter-bird" height=20 width=20 />
        </span>
      </a>

      <a href="http://diaspora.github.com/diaspora">
        <span class="label label-inverse" title="Fork the code on Github">
          <img src="https://d3mbmfe8268ud7.cloudfront.net/landing/home_git@2x.png" class="github-octocat" height=20 width=20 />
        </span>
      </a>

      <a href="/users/sign_in">
        <span class="label label-inverse">
          LOG IN
        </span>
      </a>

    </div>

    <div class="container">
        <h1>makr.io</h1>
        <h3>Collect & Remix</h3>
      </div>
  </div>

  <div class="container">
    <div id="content" class="row">
      <div id="screens" class="span7">
        <div id="s_container"></div>
      </div>

      <div class='span5'>
        <h3>Makr.io gives you the tools to quickly and easily 
          collect the things that inspire you, and remix them to inspire others.
        </h3>
        <div id="sign_up">

          <h4>JOIN THE PARTY...</h4>
          <br/>
          <%= flash_messages %>

          <form accept-charset="UTF-8" action="/users" autocomplete="off" class="form-horizontal block-form" data-validate="true" id="new_user" method="post" validate="validate" data-type="landing_page"><div style="margin:0;padding:0;display:inline"><input name="utf8" type="hidden" value="✓"></div>
            <fieldset>
              <div class="control-group">
                <label class="control-label" for="user_email">
                  EMAIL
                </label>

                <div class="controls">
                  <input data-validate="true" id="user_email" name="user[email]" placeholder="luke@hoth.net" required="required" size="30" title="Enter an email" type="email" value="">
                </div>
              </div>

              <div class="control-group">
                <label class="control-label" for="user_username">
                  USERNAME
                </label>

                <div class="controls">
                  <input data-validate="true" id="user_username" name="user[username]" pattern="[A-Za-z0-9_]+" placeholder="jedi_guy" required="required" size="30" title="Pick a username (only letters, numbers, and underscores)" type="text">
                </div>
              </div>

              <div class="control-group">
                <label class="control-label" for="user_password">
                  PASSWORD
                </label>

                <div class="controls">
                  <input data-validate="true" id="user_password" name="user[password]" pattern="......+" placeholder="••••••••" required="required" size="30" title="Enter a password (six character minimum)" type="password">
                </div>
              </div>

            </fieldset>

            <input class="new-btn button" name="commit" type="submit" value="Sign Up" />
          </form>

        </div>
      </div>
    </div>
  </div>

  <div id="footer">
    ‌© 2012
  </div>
</div>

<!--image animation scripts-->
<script>
  $(function(){
    var cdnRoot = 'https://d3mbmfe8268ud7.cloudfront.net'
      , count = 4
      , pause = 8000
      , i = 1;

    cycleIn();

    function cycleIn(){
        $("#s_container").removeClass("outtatime")
        $("#s_container").html('<img src="' + cdnRoot + '/landing/c-' + i + '/1.png"/> <img src="' + cdnRoot + '/landing/c-' + i + '/2.png"/> <img src="' + cdnRoot + '/landing/c-' + i + '/3.png"/> <img src="' + cdnRoot + '/landing/c-' + i + '/4.png"/>');
        setTimeout(cycleOut, pause);
    }

    function cycleOut(){
      $("#s_container").addClass("outtatime")
      if(++i >= count) {
        i = 1;
      }
      setTimeout(cycleIn, 400)
    }
  });
</script>

